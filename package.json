{
  "name": "ivantarskich-npm_ts_demo",
  "version": "1.0.5",
  "description": "This project is a demo on how to use typescript in an npm libary/package ",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:build": "npm run typescript:transpile && npm run node:run",
    "typescript:transpile": "npx tsc",
    "node:run": "node --es-module-specifier-resolution=node dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tariva/npm_ts_demo.git"
  },
  "author": "Ivan Tarskich",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/tariva/npm_ts_demo/issues"
  },
  "homepage": "https://github.com/tariva/npm_ts_demo#readme",
  "devDependencies": {
    "@types/chalk-animation": "^1.6.1",
    "@types/figlet": "^1.5.4",
    "@types/gradient-string": "^1.1.2",
    "@types/inquirer": "^8.2.0",
    "@types/node": "^17.0.13",
    "nodemon": "^2.0.15",
    "rimraf": "^3.0.2",
    "ts-node": "^10.4.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  },
  "bin": "./dist/index.js",
  "dependencies": {
    "chalk": "^5.0.0",
    "chalk-animation": "^1.6.0",
    "figlet": "^1.5.2",
    "gradient-string": "^2.0.0",
    "inquirer": "^8.2.0",
    "nanospinner": "^1.0.0",
    "nodemon": "^2.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.5"
  }
}
